FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    git \
    && rm -rf /var/lib/apt/lists/*

# Set up model cache directory
ENV TRANSFORMERS_CACHE=/app/.cache/huggingface
RUN mkdir -p /app/.cache/huggingface

# Copy requirements first for better caching
COPY requirements.txt .
# Explicitly use pip with --break-system-packages flag for Railway
RUN pip install --no-cache-dir --break-system-packages -r requirements.txt

# Pre-download NLTK and Huggingface models to avoid runtime downloads
RUN python -c "import nltk; nltk.download('punkt', quiet=True)" && \
    python -c "from transformers import CLIPProcessor, CLIPModel; \
    model = CLIPModel.from_pretrained('openai/clip-vit-base-patch32', force_download=False); \
    processor = CLIPProcessor.from_pretrained('openai/clip-vit-base-patch32', force_download=False)"

# Copy application code
COPY . .

# Environment variables will be passed at runtime
ENV PYTHONUNBUFFERED=1
ENV PORT=8000

# Command to run the FastAPI application with proper logging
CMD python -m uvicorn main:app --host 0.0.0.0 --port $PORT --log-level debug